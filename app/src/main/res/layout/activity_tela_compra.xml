<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telaCompraActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activities.TelaCompraActivity">
    <TextView
        android:id="@+id/txtTelaIngresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar Ingresso"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/lnlEventoSelecionado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTelaIngresso">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">
            <TextView
                android:id="@+id/txtTituloEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evento X"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/txtQuantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ingressos disponÃ­veis:"/>
            <Spinner
                android:id="@+id/spinnerQuantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnComprar"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="Comprar"
                android:backgroundTint="@color/botao_confirmar"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:text="Cancelar"
                android:backgroundTint="@color/botao_cancelar"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
